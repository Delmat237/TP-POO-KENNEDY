<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.cell.ComboBoxListCell?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tracetech.tracetech.controller.MainViewController"
            stylesheets="@style.css">

    <!-- Haut (Header) -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" >
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="TraceTech" styleClass="app-logo"/>
            <TextField promptText="Rechercher un objet..." HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button text="Déconnexion" onAction="#handleLogout"/>
            </HBox>
        </HBox>
    </top>

    <!-- Centre (Zone principale de contenu) -->
    <center>
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20">
            <Label text="Bienvenue sur TraceTech"/>
            <!-- Contenu dynamique sera chargé ici -->
        </VBox>
    </center>

    <!-- Gauche ou Bas (Navigation) -->
    <left>
        <VBox spacing="10" >
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Button text="Signaler un Vol" onAction="#handleReportTheft"/>
            <Button text="Rechercher un Objet" onAction="#handleSearch"/>
            <Button text="Mon Profil" onAction="#handleMyProfile"/>
        </VBox>
    </left>
</BorderPane>
